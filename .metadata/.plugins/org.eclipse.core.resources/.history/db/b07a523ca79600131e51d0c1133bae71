class ParseNode:
    def __init__(self, parent, token):
        self.parent = parent, # Important set to null for root node
        self.token = token,
        self.children = []
        
    def getToken(self):
        return self.token
    
    def getParent(self):
        return self.parent
    
    def addChild(self, childParseNode):
        self.children.append(childParseNode)
    
    def getChildCount(self):
        return len(self.children)
    
    def getChild(self, indx):
        if indx < len(self.children) :
            return self.children[indx]
        else :
            return ''
        