from optparse import OptionParser
from scanner import Scanner
import characterCompare

def scan(srcFilePath):
    myScanner = Scanner('TestFiles/test1')
    s = ''
    while True:
        char = myScanner.getNextCharacter()
        s = s + char
        if not char:        #This is the EOF character in python
            print s
            break
    print 'Is Digit:___________________'
    print 'Expected: t,t,f,f,f'
    c =  'Axtual: ' + characterCompare.isDigit('0') + ',' + characterCompare.isDigit('9') + ',' + characterCompare.isDigit('a')
    c = c + ',' + characterCompare.isDigit('/') + ',' + characterCompare.isDigit(':')
    print c
    
    print 'Is alpha:___________________'
    print 'Expected: t,t,t,t,f,f,f,f,f'
    c = 'Actual: ' + characterCompare.isAlpha('a') + ',' + characterCompare.isAlpha('z') + ',' + characterCompare.isAlpha('Z')
    c = c + ',' + characterCompare.isAlpha('A') + ',' + characterCompare.isAlpha('@') + ',' + characterCompare.isAlpha('[')
    c = c + ',' + characterCompare.isAlpha('\'') + ',' + characterCompare.isAlpha('{') + ',' + characterCompare.isAlpha('1')
    print c
    
    print 'Is Quote:___________________'
    print 'Expected: t,f,f,f'
    c = 'Actual: ' + characterCompare.isQuote('"') + ',' + characterCompare.isQuote('\'') + ',' + characterCompare.isQuote('!')
    c = c + ',' + characterCompare.isQuote('#')
    
    print 'Is Underscore:___________________'
    print 'Expected: t,f,f,f'
    c = 'Actual: ' + characterCompare.isUnderScore('_') + ',' + characterCompare.isUnderScore('-') + ',' + characterCompare.isUnderScore('^') 
    c = c + ',' + characterCompare.isUnderScore('\'')
    print c
    
        
    
    # myLexicalAnalyzer = lexicalAnalyzer(myScanner)
    # myLexicalAnalyzer.tokenize()
    

def main():
    parser = OptionParser("usage: %prog [options] arg1")
    parser.add_option("-s", "--source", dest="SrcFilePath",
                      type="string", default="",
                      help="Input source file path")
    (options, args) = parser.parse_args()
    
    if len(args) != 0:
        parser.error("Incorrect number of arguments provided")
    
    SrcFilePath = options.SrcFilePath
    scan(SrcFilePath)
       
if __name__ == '__main__':
    main()


    